mixin slider(options)
  - const { value, min, max, stepsNumber, showBubble, showScale, color } = options;
  - const isBubbleVisible = showBubble ? "" : " slider__bubble_hidden";
  - const isScaleVisible = showScale ? "" : " slider__scale_hidden";
  - 
    const colors = {
      secondary: "secondary",
      primary: "primary"
    };
  - let i = 0;
  - let stepRange = max / (stepsNumber - 1)

  .slider.js-slider(data-value=value data-min=min data-max=max data-step=stepsNumber data-color=color)
    div(class=`ui-slider-handle ui-slider-handle_${colors[color] || colors.secondary}`)
      div(class=`slider__bubble js-slider__bubble slider__bubble_color_${colors[color] || colors.secondary} ${isBubbleVisible}`)
    div(class=`slider__scale${isScaleVisible}`)
      while i < stepsNumber
        span= i++ * stepRange