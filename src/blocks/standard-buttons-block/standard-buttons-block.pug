include ../standard-button/standard-button

mixin standard-buttons-block()
  section.standard-buttons
    h1.title Standart buttons
    .standard-buttons__buttons-row.standard-buttons__buttons-row_first-item-margin
      +standard-button({color: "green", size: "small", type: "button", title: "Button"})
      +standard-button({color: "green", size: "big", type: "button", title: "Button"})
      +standard-button({color: "orange", size: "big", type: "button", title: "Button"})
      +standard-button({color: "orange", size: "small", type: "button", title: "Button"})
    .standard-buttons__buttons-row
      +standard-button({color: "green", size: "small", type: "button", title: "Button"})
      +standard-button({color: "green", size: "big", type: "button", title: "Button"})
      +standard-button({color: "orange", size: "big", type: "button", title: "Button"})
      +standard-button({color: "orange", size: "small", type: "button", title: "Button"})
    .standard-buttons__buttons-row
      +standard-button({color: "green", size: "small", type: "button", title: "Button"})
      +standard-button({color: "green", size: "big", type: "button", title: "Button"})
      +standard-button({color: "orange", size: "big", type: "button", title: "Button"})
      +standard-button({color: "orange", size: "small", type: "button", title: "Button"})