include ../title/title
include ../form/form
include ../toggles/toggles
include ../tick-boxes/tick-boxes
include ../form-widget/form-widget
include ../user-profiles/user-profiles

mixin form-elements()
	section.form-elements
		+title("Form elements")
		.form-elements__row
			.form-elements__form
				+form()
			.form-elements__toggle-and-tick
				.form-elements__toggles
					+toggles()
				.form-elements__tick-boxes
					+tick-boxes()
		.form-elements__row
			.form-elements__widget
				+form-widget()
			.form-elements__user-profiles
				+user-profiles()
