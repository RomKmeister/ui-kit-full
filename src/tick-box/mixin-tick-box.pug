mixin tickBox(isDisabled)
    - var classes = "tick-box tick-boxes__tick-box";
    - var fillColor = "#ffffff"; 
    if isDisabled  
        - classes += " tick-box--disabled";
        - fillColor = "#c0c0c0";
    else 
        - classes += " tick-box--enabled";
    div(class=classes)
        svg(xmlns="http://www.w3.org/2000/svg" width="13" height="10" viewBox="0 0 13 10")
            path(d="M11.043 0.012l1.41 1.405-7.758 7.726-.025-.025-.318.316-4.353-4.335 1.411-1.405 2.968 2.955z", fill=fillColor)