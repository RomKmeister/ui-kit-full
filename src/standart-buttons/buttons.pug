include ../standart-button/button

mixin standartButtonsBlock()
    section.standart-buttons
        h1.title Standart buttons
        .standart-buttons__buttons-row.standart-buttons__buttons-row_first-item-margin
            +stdButton({color: "green", size: "small", type: "button", title: "Button"})
            +stdButton({color: "green", size: "big", type: "button", title: "Button"})
            +stdButton({color: "orange", size: "big", type: "button", title: "Button"})
            +stdButton({color: "orange", size: "small", type: "button", title: "Button"})
        .standart-buttons__buttons-row
            +stdButton({color: "green", size: "small", type: "button", title: "Button"})
            +stdButton({color: "green", size: "big", type: "button", title: "Button"})
            +stdButton({color: "orange", size: "big", type: "button", title: "Button"})
            +stdButton({color: "orange", size: "small", type: "button", title: "Button"})
        .standart-buttons__buttons-row
            +stdButton({color: "green", size: "small", type: "button", title: "Button"})
            +stdButton({color: "green", size: "big", type: "button", title: "Button"})
            +stdButton({color: "orange", size: "big", type: "button", title: "Button"})
            +stdButton({color: "orange", size: "small", type: "button", title: "Button"})