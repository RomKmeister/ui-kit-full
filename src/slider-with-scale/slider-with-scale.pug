mixin slider-with-scale(options)
  .slider-with-scale.js-slider-with-scale(data-value=options.value data-min=options.min data-max=options.max)
    .ui-slider-handle
    .slider-with-scale__scale
      - let i = 0;
      - let stapRange = options.max / (options.stepsNumber - 1)
      while i < options.stepsNumber
        span= i++ * stapRange