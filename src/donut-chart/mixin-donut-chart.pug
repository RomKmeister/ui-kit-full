mixin donutChart(items)
    svg(class="donut-chart__scale" viewBox="0 0 32 32")
        each item in items
            - var scaleValue = item.value;
            - var dasharray = scaleValue + " 100";
            circle(class="donut-chart__circle" r="16" cx="16" cy="16" stroke-width="32" stroke-dasharray=dasharray stroke=item.color)
        circle(r="10" cx="16" cy="16" fill="white")