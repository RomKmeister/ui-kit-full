include ../title/title
include ../slider/slider

mixin sliders-block()
  section.sliders
    +title("Sliders")
    .sliders-block__wrapper
      .sliders-block__left-column
        +slider({ value: "40", min: "0", max: "110",stepsNumber: "0", showBubble: true, showScale: false, color: "orange" })
      .sliders-block__right-column
        +slider({ value: "75", min: "0", max: "100", stepsNumber: "5", showBubble: false, showScale: true, color: "green" })