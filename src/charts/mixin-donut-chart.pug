mixin donutChart(items)
    div(class="charts__container")&attributes(attributes)
        svg(class="charts__donut" viewBox="0 0 32 32")
            each item in items
                - var scaleValue = item.value;
                - var dasharray = scaleValue + " 100";
                circle(r="16" cx="16" cy="16" stroke-width="32" stroke-dasharray=dasharray stroke=item.color)
            circle(r="10" cx="16" cy="16" fill="white")