include ../standart-button/button

mixin newForm()
	form.form(name="form", action="")
		input.form__input-text(type="text", name="name", placeholder="Your Name")
		.form__result
		input.form__input-text(type="text", name="email", placeholder="Your Email")
		.form__result
		textarea.form__textarea(name="message", placeholder="Your Message")
		.form__button-wrap
			+stdButton({color: "fullgreen", size: "big", type: "submit", title: "Submit"})