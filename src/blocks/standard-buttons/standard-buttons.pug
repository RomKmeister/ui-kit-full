include ../title/title
include ../standard-button/standard-button

mixin standard-buttons()
  section.standard-buttons
    +title("Standart buttons")
    .standard-buttons__row.standard-buttons__row_margin_bigger
      +standard-button({ color: "primary", size: "small", type: "button", title: "Button" })
      +standard-button({ color: "primary", size: "big", type: "button", title: "Button" })
      +standard-button({ color: "secondary", size: "big", type: "button", title: "Button" })
      +standard-button({ color: "secondary", size: "small", type: "button", title: "Button" })
    .standard-buttons__row
      +standard-button({ color: "primary", size: "small", type: "button", title: "Button" })
      +standard-button({ color: "primary", size: "big", type: "button", title: "Button" })
      +standard-button({ color: "secondary", size: "big", type: "button", title: "Button" })
      +standard-button({ color: "secondary", size: "small", type: "button", title: "Button" })
    .standard-buttons__row
      +standard-button({ color: "primary", size: "small", type: "button", title: "Button" })
      +standard-button({ color: "primary", size: "big", type: "button", title: "Button" })
      +standard-button({ color: "secondary", size: "big", type: "button", title: "Button" })
      +standard-button({ color: "secondary", size: "small", type: "button", title: "Button" })